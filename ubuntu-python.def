BootStrap: docker
From: ubuntu:latest

%files
  requirements.txt /opt/requirements.txt

%post
  apt-get -y update
  apt-get -y install python3-dev python3-pip
  apt-get -y install gfortran libopenblas-dev liblapack-dev
  pip3 install numpy
  pip3 install -r /opt/requirements.txt

%environment
  export LC_ALL=C

%runscript
  python3 $@
